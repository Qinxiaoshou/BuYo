<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/ll_f_downproduct_productdate"
        android:layout_below="@+id/tv_h_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_h_perssion_product"
            android:paddingTop="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/no_picture"
            />

        <LinearLayout
            android:id="@+id/ll_h_product_permission_content"
            android:layout_toRightOf="@id/iv_h_perssion_product"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/iv_h_product_permission_title"
                android:textColor="#242424"
                android:textSize="12sp"
                android:text="鹏威 2016春季新款男鞋子 英伦男士轻便休闲真皮豆豆鞋 时尚百搭一..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格 0"
                android:textColor="#7c7e83"/>
            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存 1"
                android:textColor="#7c7e83"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp" />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/ll_f_downproduct_productdate"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>

</LinearLayout>
