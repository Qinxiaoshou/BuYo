<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <View
        android:id="@+id/menu_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/menu_bottom"
        android:background="#CCCCCC"
        />
    <RadioGroup
        android:id="@+id/person_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_Page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/button_radio_page"
            android:gravity="center_horizontal|bottom"
            android:text="主页"
            android:textSize="10sp"
            android:textColor="#978b8b" />

        <RadioButton
            android:id="@+id/rb_Logistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/button_radio_logistics"
            android:gravity="center_horizontal|bottom"
            android:text="物流"
            android:textSize="10sp"
            android:textColor="#978b8b" />

        <RadioButton
            android:id="@+id/rb_Recruits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/button_radio_recruits"
            android:gravity="center_horizontal|bottom"
            android:text="招聘"
            android:textSize="10sp"
            android:textColor="#978b8b" />

        <RadioButton
            android:id="@+id/rb_Personal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/button_radio_personal"
            android:gravity="center_horizontal|bottom"
            android:text="个人"
            android:textSize="10sp"
            android:textColor="#978b8b" />
    </RadioGroup>
</LinearLayout>