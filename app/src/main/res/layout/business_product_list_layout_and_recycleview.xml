<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:paddingTop="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_view_f_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_above="@+id/rg_manager_products"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddada"/>
    <LinearLayout
        android:background="#df3031"
        android:layout_alignParentBottom="true"
        android:id="@+id/rg_manager_products"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_add"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="添加新产品"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />
        <TextView
            android:layout_width="0.8dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:background="#fff"/>
        <TextView
            android:layout_toRightOf="@+id/tv_add"
            android:id="@+id/tv_call_moreproduct_manager"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="管理商品"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content" />

    </LinearLayout>

</RelativeLayout>
