<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_g_stytle"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_weight="1.0"
        android:id="@+id/toolbar_business_product_details"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:background="#ff3300">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_g_add_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="添加商品"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btn_right_text"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="完成"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar_business_product_details"
        android:layout_width="match_parent"
        android:id="@+id/sv_info"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/buliao3" />

                <RelativeLayout
                    android:id="@+id/ll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_product"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_product_data_title"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="春夏新品瑞士进口彩色印花直贡100纯棉衬衣服料面"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:typeface="sans" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/share" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_title"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="11dp">

                    <TextView
                        android:id="@+id/tv_product_data_price_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:textColor="#ff3e38"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_product_data_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_product_data_price_type"
                        android:text="22.00/米"
                        android:textColor="#ff3e38"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_horizontal_drive1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/rl_price"
                    android:background="#eeeeee" />

                <RelativeLayout
                    android:id="@+id/rl_store_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_horizontal_drive1"
                    android:orientation="horizontal"
                    android:paddingLeft="14dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/iv_business_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/lib_im_chat_head_icon" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_business_logo"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_company_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:text="秋明山专卖店"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_store_descrite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_company_title"
                            android:paddingLeft="16dp"
                            android:text="店铺描述"
                            android:textColor="#727272"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:weightSum="3"
                    android:id="@+id/ll_count_message"
                    android:layout_below="@+id/rl_store_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:id="@+id/rl_people_remeber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_people_remeber"
                            android:paddingTop="21dp"
                            android:paddingLeft="60dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:text="96"
                            />
                        <TextView
                            android:layout_below="@+id/tv_people_remeber"
                            android:paddingTop="8dp"
                            android:paddingLeft="38dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#727272"
                            android:textSize="18dp"
                            android:text="关注人数"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_product_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tv_all_product_count"
                            android:paddingTop="21dp"
                            android:paddingLeft="45dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:text="17"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:paddingTop="8dp"
                            android:paddingLeft="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#727272"
                            android:textSize="18dp"
                            android:text="全部商品"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:paddingTop="21dp"
                            android:paddingLeft="65dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:text="0"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:paddingTop="8dp"
                            android:paddingLeft="38dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#727272"
                            android:textSize="18dp"
                            android:text="店铺动态"
                            />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="22dp"
                    android:id="@+id/tv_horizontal_drive2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/ll_count_message"
                    android:background="#bababa" />
                <RelativeLayout
                    android:id="@+id/rl_enter_store_ways"
                    android:clickable="true"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_horizontal_drive2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingLeft="120dp"
                        android:src="@drawable/acq"/>
                    <TextView
                        android:paddingLeft="10dp"
                        android:layout_toRightOf="@+id/iv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="17dp"
                        android:textColor="#000000"
                        android:text="进入店铺"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/tv_horizontal_drive1_03"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/rl_enter_store_ways"
                    android:background="#eeeeee" />
                <LinearLayout
                    android:id="@+id/ll_product_details_message"
                    android:layout_below="@+id/tv_horizontal_drive1_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/expand_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="商品详情"
                        android:textColor="#000000"
                        android:drawableRight="@drawable/ach"
                        android:textSize="20dip" />
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="12dip"
                        android:paddingRight="12dip"
                        android:paddingTop="5dip" >
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/ll_bussiness_product_details_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/rl_type"
                                android:paddingLeft="14dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <ImageView
                                    android:id="@+id/iv_l"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/l"
                                    />
                                <TextView
                                    android:id="@+id/tv_type_text"
                                    android:layout_toRightOf="@+id/iv_l"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="花纹 : "
                                    android:textColor="#000000"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:id="@+id/tv_type"
                                    android:layout_toRightOf="@+id/tv_type_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="布约"
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:paddingLeft="14dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:id="@+id/iv_l_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/l"
                                    />
                                <TextView
                                    android:id="@+id/tv_good_descripe_text"
                                    android:layout_toRightOf="@+id/iv_l_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="颜色描述 : "
                                    android:textColor="#000000"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:paddingLeft="4dp"
                                    android:layout_below="@+id/tv_good_descripe_text"
                                    android:id="@+id/tv_good_descripe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="上等布匹纯手工，纯天然产品"
                                    android:textColor="#727272"
                                    android:textSize="13sp"/>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RadioGroup
        android:visibility="gone"
        android:background="@drawable/pic_list_item_bg"
        android:layout_weight="1.0"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:id="@+id/rg_h_open_permission"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        <TextView
            android:id="@+id/tv_rg_name"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff393e"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="开放权限"/>
    </RadioGroup>
</RelativeLayout>