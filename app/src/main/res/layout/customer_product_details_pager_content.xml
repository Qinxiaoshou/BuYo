<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:background="#000000"
            android:id="@+id/iv_product"
            android:layout_width="400dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_picture" />

        <TextView
            android:id="@+id/tv_product_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product"
            android:paddingLeft="10dp"
            android:paddingTop="24dp"
            android:text="供应礼品包装"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_product_data_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_data_title"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:text="￥ 0.01/套"
            android:textColor="#ff3e38"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_horizontal_drive1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_product_data_price"
            android:background="#e9e9e9" />

        <TextView
            android:id="@+id/tv_company_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_horizontal_drive1"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="北京-有限公司"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_company_title"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_danbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_corners_text"
                android:gravity="center"
                android:text="担保交易"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_danbao"
                android:background="@drawable/shape_corners_text2"
                android:gravity="center"
                android:text="买卖通会员"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_two"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"/>
<!--
            <TextView
                android:id="@+id/tv_company_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司年限:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_company_year_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_company_year"
                android:textSize="12sp"
                android:text="7年" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_company_year_data"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:text="公司成立时间：2008-08-29" />
        </RelativeLayout>-->

        <LinearLayout
            android:id="@+id/rl_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_three"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:weightSum="2">

          <!--  <Button
                android:id="@+id/bt_layer_say"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_red_corners_button"
                android:text="留言"
                android:textColor="#bac2c5"
                android:textSize="18sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/bt_layer_say"
                android:layout_weight="1"
                android:background="@drawable/shape_red_corners_button"
                android:text="店铺"
                android:textColor="#bac2c5"
                android:textSize="18sp" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/tv_horizontal_drive2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/rl_four"
            android:background="#e9e9e9" />
    </RelativeLayout>

</RelativeLayout>