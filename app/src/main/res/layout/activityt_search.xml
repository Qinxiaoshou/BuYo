<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="12dp">
        />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="18dp"
            android:src="@drawable/back_black" />

        <Spinner
            android:id="@+id/spinner_search"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:animationCache="true"
            android:drawSelectorOnTop="true"
            android:entries="@array/activitysearch" />

        <EditText
            android:id="@+id/et_serch"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spinner_search" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_right_text"
            android:paddingRight="10dp"
            android:src="@drawable/camera" />

        <Button
            android:id="@+id/btn_right_text"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/angle_droit_red"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/rl_spell"
        android:background="#e7e7e7"
        android:layout_marginBottom="10dp"
      />

    <RelativeLayout
        android:id="@+id/rl_spell"
        android:layout_width="270dp"
        android:layout_height="34dp"
        android:layout_above="@+id/tv_null"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spell_angle"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="50dp"
            android:id="@+id/iv_spell"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/spell"/>
         <TextView
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/iv_spell"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#4d4d4d"
             android:text="按住 说出你要的宝贝"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_null"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>