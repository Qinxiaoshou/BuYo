<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_d_0_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_d_buynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号: 11101711380"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_buy_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="完成"
            android:textColor="#eb2f29"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_d_horizontal_drive_0_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_d_0_1"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/rl_d_0_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_d_car"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/car" />

        <TextView
            android:id="@+id/tv_d_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_d_car"
            android:paddingLeft="10dp"
            android:text="感谢您在东京购物，欢迎再次光临!"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/right_arrow"

            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_d_horizontal_drive0"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eef2f3" />

    <RelativeLayout
        android:id="@+id/rl_d_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_d_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="朱嘉杰"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_d_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_d_username"
            android:paddingLeft="30dp"
            android:text="131****5568"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_d_bil"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/bil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_d_bil"
            android:singleLine="true"
            android:text="广东佛山市南海区狮山镇广东东软学院阳光在线广场"
            android:textSize="13sp" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eef2f3" />

    <RelativeLayout
        android:id="@+id/rl_d_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_d_horizontal_drive0"
        android:layout_marginLeft="23dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_store_logo2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/store" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_store_logo2"
            android:text="京东"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_d_horizontal_drive"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_d_1"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/ll_d_product_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_d_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_d_horizontal_drive"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_d_product"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:background="@drawable/shape_d_image"
                android:src="@drawable/cheese_3" />

            <RelativeLayout
                android:id="@+id/rl_d_2_1"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_d_product"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vt_d_producttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="手机特惠只换不修1年（1001-2000）元"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_d_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vt_d_producttitle"
                    android:layout_marginTop="30dp"
                    android:paddingRight="10dp"
                    android:text="x1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥79.00"
                android:textColor="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_d_horizontal_drive2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_d_2"
            android:layout_marginTop="10dp"
            android:background="#e0e0e0" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_red_corners_button"
        android:text="联系客服" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#eef2f3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_d_allPrice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="商品总额" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="￥59.90"
            android:textColor="#d24040" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_d_realpay_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_d_price"
                android:layout_toStartOf="@+id/tv_d_price"
                android:text="实付款:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_d_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="￥64.90"
                android:textColor="#d24040"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_d_buytime"
                android:layout_toStartOf="@+id/tv_d_buytime"
                android:text="下单时间:" />

            <TextView
                android:id="@+id/tv_d_buytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="2015-11-28 22:23:45" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>