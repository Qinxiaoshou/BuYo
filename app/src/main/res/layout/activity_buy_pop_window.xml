                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:text="黑  色" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
