<?xml version="1.0" encoding="utf-8"?>
<com.aode.buyoapp.LL.Homepage.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_scrollview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#FFFFFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Homepage.Person_HomePage"
        android:background="#FFFFFF">

        <include
            android:id="@+id/fragment_toolbar"
            layout="@layout/homepage_title" />

        <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cb_convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:canLoop="true" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bulei"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="布类"
                    android:textColor="#000000"
                    android:textSize="21sp"/>

                <View
                    android:layout_width="58dp"
                    android:layout_marginLeft="20dp"
                    android:layout_above="@+id/bulei"
                    android:layout_height="2dp"
                    android:background="#FF3300"
                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"
                />

            <TextView
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:textSize="21sp"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="产商"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"
                />

            <TextView
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:textSize="21sp"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新版"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC"
                />

            <TextView
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:textSize="21sp"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="论坛"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#CCCCCC"
            />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/keyword"
                android:textColor="#000000"
                android:textSize="20sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                >

                <TextView
                    style="@style/TextView_01"
                    android:text="牛仔"
                    />

                <TextView
                    style="@style/TextView_01"
                    android:text="里布" />

                <TextView
                    style="@style/TextView_01"
                    android:text="棉布" />

                <TextView
                    style="@style/TextView_01"
                    android:text="棉纶"
                    android:textColor="#FF3300"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_above="@+id/ll"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/homepage_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="#FFFFFF"/>
    </LinearLayout>
</com.aode.buyoapp.LL.Homepage.MyScrollview>