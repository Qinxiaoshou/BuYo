<?xml version="1.0" encoding="utf-8"?>
<com.aode.buyoapp.LL.Homepage.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_scrollview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Homepage.Person_HomePage">

        <include
            android:id="@+id/fragment_toolbar"
            layout="@layout/homepage_title" />

        <com.bigkoo.convenientbanner.ConvenientBanner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cb_convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:canLoop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/keyword"
                android:textColor="#000000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp">

                <TextView
                    style="@style/TextView_01"
                    android:text="牛仔" />

                <TextView
                    style="@style/TextView_01"
                    android:text="里布" />

                <TextView
                    style="@style/TextView_01"
                    android:text="棉布" />

                <TextView
                    style="@style/TextView_01"
                    android:text="棉纶" />

                <TextView
                    style="@style/TextView_01"
                    android:text="更多" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/homepage_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
    </LinearLayout>
</com.aode.buyoapp.LL.Homepage.MyScrollview>