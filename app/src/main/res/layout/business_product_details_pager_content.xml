<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:more="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_info"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/buliao3" />

        <RelativeLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_product_data_title"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="春夏新品瑞士进口彩色印花直贡100纯棉衬衣服料面"
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="sans" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="10dp"
                android:src="@drawable/share" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingTop="11dp">

            <TextView
                android:id="@+id/tv_product_data_price_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥"
                android:textColor="#ff3e38"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_data_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_product_data_price_type"
                android:text="22.00/米"
                android:textColor="#ff3e38"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_horizontal_drive1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/rl_price"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/rl_store_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_horizontal_drive1"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/iv_business_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lib_im_chat_head_icon" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_business_logo"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_company_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="秋明山专卖店"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_store_descrite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_company_title"
                    android:paddingLeft="16dp"
                    android:text="店铺描述"
                    android:textColor="#727272"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:weightSum="3"
            android:id="@+id/ll_count_message"
            android:layout_below="@+id/rl_store_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            >
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/rl_people_remeber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_people_remeber"
                    android:paddingTop="21dp"
                    android:paddingLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="96"
                    />
                <TextView
                    android:layout_below="@+id/tv_people_remeber"
                    android:paddingTop="8dp"
                    android:paddingLeft="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#727272"
                    android:textSize="18dp"
                    android:text="关注人数"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_product_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_all_product_count"
                    android:paddingTop="21dp"
                    android:paddingLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:text="17"
                    />
                <TextView
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#727272"
                    android:textSize="18dp"
                    android:text="全部商品"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:paddingTop="21dp"
                    android:paddingLeft="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:text="0"
                    />
                <TextView
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingLeft="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#727272"
                    android:textSize="18dp"
                    android:text="店铺动态"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginTop="22dp"
            android:id="@+id/tv_horizontal_drive2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_count_message"
            android:background="#bababa" />
        <RelativeLayout
            android:id="@+id/rl_enter_store_ways"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_horizontal_drive2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_01"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="120dp"
                android:src="@drawable/acq"/>
            <TextView
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/iv_01"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text="进入店铺"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/tv_horizontal_drive1_03"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/rl_enter_store_ways"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_below="@+id/tv_horizontal_drive1_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dip"
            android:text="商品详情"
            android:textColor="#000000"
            android:textSize="20dip" />

        <com.aode.buyoapp.qinxiaoshou.view.MoreTextView
            android:layout_below="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            more:textColor="@android:color/black"
            more:textSize="18dip"
            more:maxLine="3"
            more:text="在当今世界风云变换、物欲横流的时代拥有一颗备受熏陶的热爱自然、社会和人类的心至为重要。一个人在坠地的那刻起就有着一颗特殊的爱，不仅仅是源自于母爱，更多的是来自己自己内心的细胞，我们可以说是“自尊自爱”之心。唯有懂得爱惜自己尊重自己的人才能“己所不欲勿施于人”，才能做到“老吾老以及人之老，幼吾幼以及人之幼”，进而具备“穷则独善其身，达则兼济天下”的中华民族传统美德。这样一说范围就被我扩大了。"/>
    </RelativeLayout>

</RelativeLayout>
    </ScrollView>